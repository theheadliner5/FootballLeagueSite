@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Table>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}
@Html.Partial("~/Views/Partials/SectionHeader.cshtml")
<!-- Statistic -->
            <div ng-controller="matchCtrl">
            <div class="row">
                <div class="col-2"></div>
        
                <div class="col-8">
            
                    <div ng-cloak>
                      <md-content>
                        <md-tabs md-dynamic-height md-border-bottom>
            
                          <md-tab label="Ranking">
                            <md-content class="md-padding text-center">
            
                                <div class="row" style="font-weight: bold;">
            
                                    <div class="col-2">
                                        <p>Miejsce</p>
                                    </div>
                                    
                                    <div class="col-2">
                                        <p>Nazwa drużyny</p>
                                    </div>
            
                                    <div class="col-2">
                                        <p>Wygrane</p>
                                    </div>
            
                                    <div class="col-2">
                                        <p>Remisy</p>
                                    </div>
            
                                    <div class="col-2">
                                        <p>Przegrane</p>
                                    </div>
                                    
                                    <div class="col-2">
                                        <p>Punkty</p>
                                    </div>
            
                                </div>
            
                                <div ng-repeat="obj in statisticList" >
            
                                    <div class="row" ng-click="" data-toggle="collapse" aria-expanded="false" aria-controls="collapse[[ obj.match_id ]]">
            
                                        <div class="col-2">
                                            <p>[[ obj.overall_league_position ]]</p>
                                        </div>
                            
                                        <div class="col-2">
                                            <p><a href="/teams/[[ obj.team_name.replace(' ',' -') ]]/">[[ obj.team_name ]]</a></p>
                                        </div>
            
                                        <div class="col-2">
                                            <p>[[ obj.overall_league_W ]]</p>
                                        </div>
            
                                        <div class="col-2">
                                            <p>[[ obj.overall_league_L ]]</p>
                                        </div>
                                        
                                        <div class="col-2">
                                            <p>[[ obj.overall_league_D ]]</p>
                                        </div>
                                        
                                        <div class="col-2">
                                            <p>[[ obj.overall_league_PTS ]]</p>
                                        </div>
            
                                    </div>
                                </div>
            
                            </md-content>
                          </md-tab>
            
            
                        </md-tabs>
                      </md-content>
                    </div>
            
                </div>
        
                <div class="col-2" ng-cloak></div>
        
            </div>
                
            <!-- /Statistic -->